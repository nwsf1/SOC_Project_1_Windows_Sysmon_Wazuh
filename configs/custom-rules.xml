<group name="sysmon,windows,custom_rules">

  <!-- Suspicious PowerShell Command -->
  <rule id="900001" level="10">
    <if_sid>61603</if_sid>
    <match>powershell.exe</match>
    <match>-enc</match>
    <description>Suspicious PowerShell encoded command execution</description>
    <mitre>
      <id>T1059.001</id>
    </mitre>
  </rule>

  <!-- LOLBins: rundll32 / regsvr32 abuse -->
  <rule id="900002" level="8">
    <if_sid>61603</if_sid>
    <regex>rundll32|regsvr32</regex>
    <description>Potential LOLBin abuse detected</description>
    <mitre>
      <id>T1218</id>
    </mitre>
  </rule>

  <!-- C2-like DNS Query -->
  <rule id="900003" level="7">
    <if_sid>61611</if_sid>
    <regex>c2|malicious|dnscat</regex>
    <description>C2-like DNS query observed</description>
    <mitre>
      <id>T1071.004</id>
    </mitre>
  </rule>

  <!-- Untrusted EXE executed from user directory -->
  <rule id="900004" level="10">
    <if_sid>61601</if_sid>
    <regex>Users\\\\.*\\.exe</regex>
    <description>Executable launched from user-writable path</description>
    <mitre>
      <id>T1204</id>
    </mitre>
  </rule>

</group>
